<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="managerSQL">
    <!-- 총 회원 수 -->
    <select id="getToTalMember">
        select count(*) from user
    </select>
    <!-- 이번주 가입 회원 수 -->
    <select id="getWeekMember">
        select
        (select count(*)
        from user
        where regdate > to_char(trunc(sysdate,'iw'), 'yyyy/mm/dd'))
        from user;
    </select>
    <!-- 오늘 가입 회원 수 -->
    <select id="getTodayMember">
        select
        (select count(*)
        from user
        where regdate >= to_char(trunc(sysdate), 'yyyy/mm/dd'))
        from ;
    </select>

</mapper>